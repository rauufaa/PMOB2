<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.13"
    android:layout_margin="30dp"
    android:padding="30dp"
    android:backgroundTint="@color/cardview_light_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewMulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Sep, 09:28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageview_location"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/front_app_image"
            app:layout_constraintRight_toLeftOf="@+id/textViewParkingName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewMulai" />

        <TextView
            android:id="@+id/textViewParkingName"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="I'm a title"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_location"
            app:layout_constraintEnd_toStartOf="@+id/textViewBiayaHistory"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageview_location"
            app:layout_constraintTop_toTopOf="@+id/imageview_location"
            app:layout_constraintVertical_bias="0.04000002" />

        <TextView
            android:id="@+id/textViewBiayaHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp2.000"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textViewParkingName"
            app:layout_constraintTop_toTopOf="@+id/imageview_location"
            app:layout_constraintVertical_bias="0.06999999" />

        <TextView
            android:id="@+id/textViewMerkHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merk"
            app:layout_constraintBottom_toTopOf="@+id/textViewSelesai"
            app:layout_constraintStart_toStartOf="@+id/textViewPlatKendaraanHistory"
            app:layout_constraintTop_toBottomOf="@+id/textViewPlatKendaraanHistory" />

        <TextView
            android:id="@+id/textViewPlatKendaraanHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plat"
            app:layout_constraintBottom_toTopOf="@+id/textViewMerkHistory"
            app:layout_constraintStart_toStartOf="@+id/textViewParkingName"
            app:layout_constraintTop_toBottomOf="@+id/textViewParkingName" />

        <TextView
            android:id="@+id/textViewSelesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="136dp"
            android:text="Selesai"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewMerkHistory"
            app:layout_constraintTop_toBottomOf="@+id/textViewMerkHistory" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>